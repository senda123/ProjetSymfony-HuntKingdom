{% extends "@User/Page_admin.html.twig" %}
{% block body %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#mourad tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
    <style>
        a.btn {
            -webkit-transform: scale(0.8);
            -moz-transform: scale(0.8);
            -o-transform: scale(0.8);
            -webkit-transition-duration: 0.5s;
            -moz-transition-duration: 0.5s;
            -o-transition-duration: 0.5s;
            padding-right: 2px;
            padding-left: 2px;
        }
        .test {
            padding-left: 5rem;
            padding-right: 5rem;
        }
        .change {
            color: white;
        }
    </style>
    <div class="test">


    <div class="col-lg-20 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Promotions List</h4>

                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th>
                                Value(%)
                            </th>
                            <th>
                                Product
                            </th>
                            <th>
                                End On
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                        </thead>
                        <tbody id="mourad">
                        {% for p in pro %}

                            <tr>
                                <td>
                                    {{ p.valeur }}%
                                </td>

                                <td>
                                    {{ p.getIdProduit.getnom}}
                                </td>
                                <td>
                                    {{ p.datef|date('d/M/Y') }}
                                </td>
                                <td>
                                    <img src="{{ asset('Upload/')}}{{ p.IdProduit.nomfile }}" width="100" class="img-circle" />
                                </td>

                                <td>
                                    <a class="btn btn-success a-btn-slide-text" href="{{ path('Promotion_Modifier',{'id':p.id}) }}">
                                        <span class="fas fa-edit" aria-hidden="true"></span>
                                        <span><strong>Edit</strong></span></a>
                                    <a class="btn btn-danger a-btn-slide-text" href="{{ path('Promotion_Delete',{'id':p.id}) }}">
                                        <span class="fas fa-minus-circle" aria-hidden="true"></span>
                                        <span><strong>Delete</strong></span></a>
                                </td>


                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <div class="navigation text-center" >
                        {{ knp_pagination_render(pro) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

{% endblock %}